type specification = {
  ?id : string option;
  _type <json name="type"> : string;
  motivation : string; 
  body : body_t;
  target : target_t;
  ?created : string option;
  ?modified : string option
}

type body_t = {
  _type <json name="type"> : string;
  language : string;
  format : string;
  value : string
}

type target_t = [
  | T1 of target_t1
  | T2 of target_t2
]  

type target_t1 = string

type target_t2 = {
  _type <json name="type"> : string;
  source: string;
} 

